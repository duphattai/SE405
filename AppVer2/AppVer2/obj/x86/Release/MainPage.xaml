<Page x:ConnectionId='1'
    x:Class="AppVer2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppVer2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:drawerLayout="using:DrawerLayout" 
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"                     >

    <Grid x:Name="RootLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Title Bar -->
        <Grid x:Name="TitleBar" Background="#00ADEF" Grid.Row ="0" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image x:ConnectionId='7' Margin="5"  x:Name="DrawerIcon"  Grid.Column="0" Source="/Images/ic_drawer.png" HorizontalAlignment="Left"                            />
            <TextBlock Grid.Column="1" Text="Optical Character Recognition" Foreground="White" VerticalAlignment="Center" FontSize="18"/>
        </Grid>
        <!-- Drawer Layout -->
        <drawerLayout:DrawerLayout Grid.Row="1"  x:Name="DrawerLayout">
            <Grid x:Name="MainFragment" d:IsHidden="True">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <!-- Main Content goes here -->
                <Grid VerticalAlignment="Stretch" x:Name="HomeFragment">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF4E4EB6" Offset="0.141"/>
                            <GradientStop Color="#FFC2C2E4" Offset="0.454"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Border Margin="10,10,10,0" Grid.Row="0" Grid.Column="0" BorderBrush="#FFAA1919" BorderThickness="2">
                        <Image x:Name="imgSource"  Source="Assets/SplashScreen.png" Stretch="Fill"/>
                    </Border>


                    <Button x:ConnectionId='6' x:Name="btConvert" Content="Convert" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1" VerticalAlignment="Stretch"
                                                      Margin="299,0.333,11,0"    >
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="#FF5B9CEA" Offset="0.51"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <ScrollViewer Margin="10,0,10,10" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White">
                        <Border BorderThickness="2" BorderBrush="#FFAA1919">
                            <TextBlock x:Name="txtResult" Margin="10,10,10,10" TextWrapping="Wrap" FontSize="13" Foreground="Black" Text="Result"/>
                        </Border>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <Grid x:Name="ListFragment">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF4E4EB6" Offset="0.141"/>
                        <GradientStop Color="#FFC2C2E4" Offset="0.454"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid Margin="10,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="64" />
                        <RowDefinition Height="64" />
                        <RowDefinition Height="64" />
                        <RowDefinition Height="64" />
                        <RowDefinition Height="64" />
                        <RowDefinition Height="64" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="64"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                    <Button x:ConnectionId='2' Grid.Column="0" Grid.Row="0" Width="64"
                                                       Height="65" Margin="0,8,0,-9">
                        <Button.Background>
                            <ImageBrush ImageSource="ms-appx:///Images/open-file-icon.png"/>
                        </Button.Background>
                    </Button>
                    <TextBlock VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Text="Open File" FontSize="15" Margin="17.833,29,-17.5,17.167"/>


                    <Button x:ConnectionId='3' x:Name="Camera" Grid.Column="0" Grid.Row="1"
            	    Width="64" Height="65"                      Margin="0,7.833,0,-8.667">
                        <Button.Background>
                            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Images/camera-icon.png"/>
                        </Button.Background>
                    </Button>
                    <TextBlock VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Text="Camera" FontSize="15" Margin="17.833,28.833,-17.5,17.333"/>

                    <Button x:ConnectionId='4' Grid.Column="0" Grid.Row="2"                           
            	    Height="65" Width="64" Margin="0,7.667,0,-8.5">
                        <Button.Background>
                            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Images/Save-icon.png"/>
                        </Button.Background>
                    </Button>
                    <TextBlock VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Text="Save" FontSize="15" Margin="17.833,28.667,-17.5,17.5"/>

                    <Button x:ConnectionId='5' Grid.Column="0" Grid.Row="3"                                
            	    Height="64" Width="64" Margin="0,8.5,0,-8.333">
                        <Button.Background>
                            <ImageBrush ImageSource="ms-appx:/Images/email-icon.png"/>
                        </Button.Background>
                    </Button>
                    <TextBlock VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" Text="Send Email" FontSize="15" Margin="17.833,29.5,-17.5,16.667"/>



                    <Button Grid.Column="0" Grid.Row="4"
            	    Height="65" Width="64" Margin="0,8.333,0,-9.167">
                        <Button.Background>
                            <ImageBrush ImageSource="ms-appx:/Images/Actions-help-about-icon.png"/>
                        </Button.Background>
                    </Button>
                    <TextBlock VerticalAlignment="Center" Grid.Column="1" Grid.Row="4" Text="Information" FontSize="15" Margin="17.833,29.333,-17.5,16.833"/>

                </Grid>
            </Grid>
        </drawerLayout:DrawerLayout>
    </Grid>
</Page>

